# 应用配置
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_VERSION=v1

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=picture_live
DB_USER=postgres
DB_PASSWORD=postgres123
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
MAX_FILES_PER_SESSION=1000

# 图片处理配置
IMAGE_QUALITY_THUMBNAIL=60
IMAGE_QUALITY_MEDIUM=80
IMAGE_QUALITY_ORIGINAL=90
THUMBNAIL_SIZE=300
MEDIUM_SIZE=800
WEBP_QUALITY=80
WATERMARK_OPACITY=0.3

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 日志配置
LOG_LEVEL=debug
LOG_FILE_MAX_SIZE=5242880
LOG_MAX_FILES=5

# 缓存配置
CACHE_TTL_SESSION=3600
CACHE_TTL_PHOTO=1800
CACHE_TTL_USER=900

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_UPLOAD_MAX=50

# WebSocket配置
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

# AI功能配置
AI_TAGGING_ENABLED=true
AI_MODEL_PATH=./models
AI_CONFIDENCE_THRESHOLD=0.5

# 邮件配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# 云存储配置
CLOUD_STORAGE_PROVIDER=local
# MinIO配置
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=picture-live
MINIO_PUBLIC_URL=http://localhost:9000
# 阿里云OSS
ALIYUN_OSS_REGION=
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
# AWS S3
AWS_S3_REGION=
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# 监控配置
MONITORING_ENABLED=false
MONITORING_ENDPOINT=
MONITORING_API_KEY=

# 安全配置
SESSION_SECRET=your-session-secret-change-in-production
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# 功能开关
FEATURE_REVIEW_MODE=true
FEATURE_WATERMARK=true
FEATURE_MULTI_RESOLUTION=true
FEATURE_WEBP_COMPRESSION=true
FEATURE_RESUMABLE_UPLOAD=true
FEATURE_AI_TAGGING=true
FEATURE_MULTI_LANGUAGE=true