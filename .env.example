# 全局环境配置
NODE_ENV=development

# 应用信息
APP_NAME=照片直播
APP_VERSION=1.0.0
APP_DESCRIPTION=个人照片直播应用

# 后端API配置
API_HOST=localhost
API_PORT=3001
API_URL=http://localhost:3001

# 前端Web配置
WEB_HOST=localhost
WEB_PORT=3000
WEB_URL=http://localhost:3000

# WebSocket配置
WS_URL=ws://localhost:3001

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/picture_live
DB_HOST=localhost
DB_PORT=5432
DB_NAME=picture_live
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 功能开关
FEATURE_REVIEW_MODE=true
FEATURE_WATERMARK=true
FEATURE_AI_TAGGING=true
FEATURE_MULTI_LANGUAGE=true

# 开发工具
DEBUG=true
LOG_LEVEL=debug